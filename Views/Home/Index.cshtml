@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@model ResultadoOCR

<h2>OCR con Azure Computer Vision</h2>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label>URL de imagen:</label>
        <input type="text" name="imageUrl" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Subir imagen local:</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Procesar</button>
</form>

@if (Model != null)
{
    <hr />
    <img src="@Model.ImagePath" style="max-width: 300px;" />
    <h4 class="mt-3">Texto detectado:</h4>
    <pre>@Model.OriginalText</pre>

    <h4>Traducción (inglés):</h4>
    <pre>@Model.TranslatedText</pre>
}
